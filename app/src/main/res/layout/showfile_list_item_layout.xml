<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/showfile_list_item_image"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@mipmap/filesystem_grid_icon_bin"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/showfile_list_item_title"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>

  <ImageView
      android:id="@+id/showfile_list_item_video_image"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@mipmap/ic_play_icon"
      app:layout_constraintLeft_toLeftOf="@id/showfile_list_item_image"
      app:layout_constraintRight_toRightOf="@id/showfile_list_item_image"
      app:layout_constraintTop_toTopOf="@id/showfile_list_item_image"
      app:layout_constraintBottom_toBottomOf="@id/showfile_list_item_image"/>

  <TextView
      android:id="@+id/showfile_list_item_title"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:maxLines="2"
      android:layout_marginLeft="10dp"
      app:layout_constraintLeft_toRightOf="@id/showfile_list_item_image"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/showfile_list_item_sub"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/showfile_list_item_sub"
      android:textColor="#C6C4C6"
      android:textSize="12sp"
      android:layout_marginLeft="10dp"
      app:layout_constraintLeft_toRightOf="@id/showfile_list_item_image"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/showfile_list_item_title"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_width="0dp"
      android:maxLines="3"
      android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>